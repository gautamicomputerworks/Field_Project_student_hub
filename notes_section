    <div class="main-content">
        <div class="action-section">
            <div class="terminal-box">
                <div class="terminal-header">> UPLOAD NOTES</div>
                <div class="input-group">
                    <label>SUBJECT_NAME</label>
                    <input type="text" id="topicName" placeholder="E.G. DATA_STRUCTURES">
                </div>
                <div class="input-group">
                    <label>SUBJECT_CODE</label>
                    <input type="text" id="subjectCode" placeholder="E.G. CS401">
                </div>
                <div class="input-group">
                    <label>SEMESTER</label>
                    <select id="semesterLevel">
                        <option value="1">1</option><option value="2">2</option>
                        <option value="3">3</option><option value="4">4</option>
                        <option value="5">5</option><option value="6">6</option>
                        <option value="7">7</option><option value="8">8</option>
                    </select>
                </div>
                <div class="input-group">
                    <label>DRIVE_URL</label>
                    <input type="text" id="driveUrl" placeholder="HTTPS://DRIVE.GOOGLE.COM/...">
                </div>
                <button class="post-btn" onclick="uploadResource()">UPLOAD</button>
            </div>
        </div>

        <div class="feed-container">
            <div class="search-box">
                <span class="search-icon">üîç</span>
                <input type="text" id="globalSearch" placeholder="Search sem, code, or name..." oninput="displayRecords()">
            </div>
            <div class="feed-section" id="fileContainer"></div>
        </div>
    </div>

    <script>
        const sessionUser = localStorage.getItem('loggedInUser') || "GUEST_USER";

        document.addEventListener('DOMContentLoaded', () => {
            displayRecords();
        });

        function uploadResource() {
            if (!sessionUser.toLowerCase().startsWith('adm')) {
                alert("ACCESS_DENIED: Admin privileges required.");
                return;
            }
            const name = document.getElementById('topicName').value;
            const url = document.getElementById('driveUrl').value;
            const code = document.getElementById('subjectCode').value;
            const sem = document.getElementById('semesterLevel').value;

            if (!name || !url || !code) { alert("ERROR: Fill all fields."); return; }

            const record = {
                id: Date.now(),
                topic: name, 
                link: url,
                subject: code,
                semester: sem,
                author: sessionUser,
                timestamp: new Date().toLocaleDateString()
            };

            const database = JSON.parse(localStorage.getItem('libData')) || [];
            database.unshift(record);
            localStorage.setItem('libData', JSON.stringify(database));

            displayRecords();
            document.getElementById('topicName').value = '';
            document.getElementById('driveUrl').value = '';
            document.getElementById('subjectCode').value = '';
        }

        function displayRecords() {
            const container = document.getElementById('fileContainer');
            // Get search value and convert to lowercase for comparison
            const query = document.getElementById('globalSearch').value.toLowerCase().trim();
            const database = JSON.parse(localStorage.getItem('libData')) || [];
            container.innerHTML = '';

            // Improved Filter Logic
            const filteredData = database.filter(item => {
                const sName = (item.topic || "").toLowerCase();
                const sCode = (item.subject || "").toLowerCase();
                const sSem = (item.semester || "").toString();
                
                // If query is empty, show everything
                if (query === "") return true;

                // Check if query matches Name, Code, OR Semester
                return sName.includes(query) || sCode.includes(query) || sSem === query;
            });

            if(filteredData.length === 0) {
                container.innerHTML = '<div style="color:#555; font-family:\'Press Start 2P\'; font-size:0.5rem; text-align:center; margin-top:50px;">NO_MATCHING_DATA_FOUND</div>';
                return;
            }

            filteredData.forEach(file => {
                const isAdmin = sessionUser.toLowerCase().startsWith('adm');
                
                container.innerHTML += `
                    <div class="resource-card">
                        <div class="timestamp-header">STAMP: ${file.timestamp}</div>
                        <div class="uploader-tag">> SRC: ${file.author.toUpperCase()}</div>
                        <div class="resource-title">${file.topic.toUpperCase()}</div>
                        <div class="meta-display">
                            <span class="code-tag">> CODE: ${file.subject.toUpperCase()}</span>
                            <span class="sem-tag">> SEM: ${file.semester}</span>
                        </div>
                        
                        <a href="${file.link}" target="_blank" class="open-btn">[ OPEN_LINK ]</a>
                        
                        ${isAdmin ? `<button class="delete-btn" onclick="deleteRecord(${file.id})">PURGE</button>` : ''}
                    </div>
                `;
            });
        }

        function deleteRecord(id) {
            if (!sessionUser.toLowerCase().startsWith('adm')) return;
            if (!confirm("Confirm data purge?")) return;
            let database = JSON.parse(localStorage.getItem('libData')) || [];
            database = database.filter(f => f.id !== id);
            localStorage.setItem('libData', JSON.stringify(database));
            displayRecords();
        }
    </script>
