    <script>
        function addReminder() {
            const subject = document.getElementById('remSubject').value;
            const task = document.getElementById('remTask').value;
            const date = document.getElementById('remDate').value;
            const note = document.getElementById('remNote').value;

            if(!subject || !task || !date) {
                alert("CRITICAL ERROR: Mandatory fields missing.");
                return;
            }

            const newReminder = {
                subject, task, date, note, id: Date.now()
            };

            let reminders = JSON.parse(localStorage.getItem('student_reminders') || '[]');
            reminders.push(newReminder);
            localStorage.setItem('student_reminders', JSON.stringify(reminders));

            // Clear inputs
            document.getElementById('remSubject').value = '';
            document.getElementById('remTask').value = '';
            document.getElementById('remDate').value = '';
            document.getElementById('remNote').value = '';

            renderReminders();
        }

        function renderReminders() {
            const container = document.getElementById('remindersContainer');
            let reminders = JSON.parse(localStorage.getItem('student_reminders') || '[]');
            
            const today = new Date().setHours(0,0,0,0);

            // Filter out past dates
            const currentReminders = reminders.filter(r => {
                const rDate = new Date(r.date).getTime();
                return rDate >= today;
            });

            // Sort by date (nearest first)
            currentReminders.sort((a, b) => new Date(a.date) - new Date(b.date));

            if (currentReminders.length === 0) {
                container.innerHTML = '<div style="opacity:0.3; text-align:center; margin-top:50px;">NO_ACTIVE_TASKS_IN_TIMELINE</div>';
                return;
            }

            container.innerHTML = currentReminders.map(r => `
                <div class="reminder-item">
                    <span class="reminder-date">${r.date}</span>
                    <span class="reminder-subject">${r.subject}</span>
                    <h3>${r.task}</h3>
                    <div class="reminder-note">${r.note || 'No additional notes.'}</div>
                </div>
            `).join('');
        }

        // Initial Load
        renderReminders();
    </script>
</body>
</html>


