    <script>
        // --- 1. IDENTITY & SECURITY CHECK ---
        const activeUser = sessionStorage.getItem('activeUser');
        
        // If no user is logged in, redirect to login page immediately
        if (!activeUser) {
            window.location.href = "index.html"; 
        } else {
            // Update the profile button with the actual username
            document.getElementById('user-profile').innerText = activeUser;
        }

        const saberSnd = document.getElementById('saberSound');
        const laserSnd = document.getElementById('laserSound');
        const slash = document.getElementById('slash');
        const overlay = document.getElementById('exit-overlay');

        function triggerSelection(page) {
            slash.classList.remove('red-slash');
            [saberSnd, laserSnd].forEach(snd => {
                if(snd) {
                    snd.currentTime = 0;
                    snd.play().catch(e => {});
                }
            });
            
            slash.classList.remove('slash-active');
            void slash.offsetWidth; 
            slash.classList.add('slash-active');

            setTimeout(() => {
                window.location.href = page;
            }, 500);
        }

        function triggerExit() {
            // --- 2. CLEAR SESSION ON LOGOUT ---
            sessionStorage.removeItem('activeUser');

            slash.classList.add('red-slash');
            if(saberSnd) saberSnd.play().catch(e => {});
            
            slash.classList.remove('slash-active');
            void slash.offsetWidth; 
            slash.classList.add('slash-active');

            setTimeout(() => {
                overlay.style.display = 'flex';
                let count = 3;
                let timer = setInterval(() => {
                    count--;
                    overlay.innerText = `EXITING: ${count}`;
                    if (count <= 0) {
                        clearInterval(timer);
                        window.location.href = "index.html"; // Redirecting to your access gate
                    }
                }, 1000);
            }, 450);
        }
    </script>
</body>
</html>





