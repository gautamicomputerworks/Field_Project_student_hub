    <div class="main-layout">
        <div class="module-box">
            <div class="module-header">
                <span>01_ACADEMIC_FORECAST_TERMINAL</span>
                <span style="color: var(--neon-blue); animation: flicker 2s infinite;">[SYSTEM_ACTIVE]</span>
            </div>
            
            <div class="analysis-grid">
                <div><label>TOTAL_SEMS</label><select id="totalSems"><option value="6">6 SEMS</option><option value="8" selected>8 SEMS</option></select></div>
                <div><label>COMPLETED</label><input type="number" id="semsDone" placeholder="SEMS"></div>
                <div><label>CURR_CGPA</label><input type="number" id="currCGPA" step="0.01" placeholder="CGPA"></div>
                <div><label>GOAL_CGPA</label><input type="number" id="targetCGPA" step="0.01" placeholder="GOAL"></div>
                <button class="calc-btn" onclick="calculateForecast()">EXECUTE_ANALYSIS_SEQUENCE</button>
            </div>

            <div id="res" style="display:none"></div>

            <div class="chart-container">
                <canvas id="marksChart"></canvas>
            </div>
        </div>
    </div>

    <script>
        const currentUser = sessionStorage.getItem('activeUser') || "Guest";
        document.getElementById('userGreeting').innerText = `USER: ${currentUser.toUpperCase()}`;

        let marksChart;
        function calculateForecast() {
            const total = parseInt(document.getElementById('totalSems').value);
            const done = parseInt(document.getElementById('semsDone').value);
            const current = parseFloat(document.getElementById('currCGPA').value);
            const target = parseFloat(document.getElementById('targetCGPA').value);
            const resDiv = document.getElementById('res');

            if (isNaN(done) || isNaN(current) || isNaN(target)) {
                alert("ERROR: Missing Data Parameters.");
                return;
            }

            const remainingSems = total - done;
            if (remainingSems <= 0) {
                resDiv.innerHTML = "STATUS: NO_SEMESTERS_REMAINING_IN_CYCLE";
                resDiv.style.display = "block";
                return;
            }

            const requiredTotal = (target * total) - (current * done);
            const avgRequired = (requiredTotal / remainingSems).toFixed(2);

            resDiv.style.display = "block";
            if (avgRequired > 10) {
                resDiv.style.color = "var(--neon-red)";
                resDiv.style.borderColor = "var(--neon-red)";
                resDiv.innerHTML = `CRITICAL_ALERT: Required SGPA is ${avgRequired}. EXCEEDS_SYSTEM_LIMITS (10.0).`;
            } else if (avgRequired < 0) {
                resDiv.style.color = "var(--neon-green)";
                resDiv.innerHTML = `TARGET_SECURED: Already exceeding goal requirements. Minimum SGPA needed: 0.00`;
            } else {
                resDiv.style.color = "var(--neon-blue)";
                resDiv.style.borderColor = "var(--neon-blue)";
                resDiv.innerHTML = `ANALYSIS_COMPLETE: Required SGPA for the remaining ${remainingSems} semesters: <strong>${avgRequired}</strong>`;
            }

            updateChart(current, avgRequired, done, total);
        }

        function updateChart(current, required, done, total) {
            const ctx = document.getElementById('marksChart').getContext('2d');
            const labels = Array.from({length: total}, (_, i) => `SEM ${i+1}`);
            const dataPoints = Array(total).fill(null);
            
            for(let i=0; i<done; i++) dataPoints[i] = current;
            let forecastVal = parseFloat(required);
            if (forecastVal > 10) forecastVal = 10;
            if (forecastVal < 0) forecastVal = 0;
            for(let i=done; i<total; i++) dataPoints[i] = forecastVal;

            if (marksChart) marksChart.destroy();
            
            Chart.defaults.color = '#39FF14';
            Chart.defaults.font.family = 'Courier New';

            marksChart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'GPA_PROJECTION',
                        data: dataPoints,
                        borderColor: '#00F3FF',
                        backgroundColor: 'rgba(0, 243, 255, 0.1)',
                        fill: true,
                        tension: 0.3,
                        pointRadius: 5,
                        pointBackgroundColor: '#39FF14'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { 
                            min: 0, 
                            max: 10, 
                            grid: { color: 'rgba(57, 255, 20, 0.1)' },
                            ticks: { stepSize: 1 }
                        },
                        x: { 
                            grid: { color: 'rgba(57, 255, 20, 0.1)' }
                        }
                    },
                    plugins: { 
                        legend: { display: false }
                    }
                }
            });
        }
    </script>
