<body>

    <div class="hud-bar">
        <div class="hub-logo">REMINDER_CONSOLE v3.2</div>
        <button class="back-btn" onclick="location.href='homepage.html'">< BACK_TO_HUB</button>
    </div>

    <div class="main-layout">
        <div class="module-box">
            <div class="module-header">INITIALIZE_ENTRY</div>
            <div class="form-group">
                <label>SUBJECT</label>
                <input type="text" id="remSubject" placeholder="e.g. Mathematics II">
            </div>
            <div class="form-group">
                <label>WHAT_TO_DO</label>
                <input type="text" id="remTask" placeholder="e.g. Assignment Submission">
            </div>
            <div class="form-group">
                <label>DUE_DATE</label>
                <input type="date" id="remDate">
            </div>
            <div class="form-group">
                <label>EXTRA_NOTES</label>
                <textarea id="remNote" rows="3" placeholder="Additional details..."></textarea>
            </div>
            <button class="add-btn" onclick="addReminder()">[ SAVE_REMINDER ]</button>
        </div>

        <div class="module-box">
            <div class="module-header" id="listHeader">ACTIVE_TIMELINE</div>
            <div class="reminder-list" id="remindersContainer">
                </div>
        </div>
