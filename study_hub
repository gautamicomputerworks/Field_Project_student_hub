<body>

    <div class="hud-bar">
        <div class="hub-logo">COMMUNITY_DISCUSSIONS</div>
        <button class="back-btn" onclick="location.href='Homepage.html'">< BACK TO HUB</button>
    </div>

    <div class="main-content">
        <div class="feed-section" id="doubtFeed"></div>

        <div class="action-section">
            <div class="terminal-box">
                <div class="terminal-header">CREATE NEW DISCUSSION</div>
                <textarea id="newDoubtText" placeholder="Describe your issue..."></textarea>
                <button class="post-btn" onclick="postDoubt()">[ POST DISCUSSION ]</button>
            </div>
            <div id="status-console" style="font-size: 0.6rem; color: var(--neon-blue); font-family: 'Press Start 2P'; opacity: 0.5;">
                > SYSTEM ONLINE
            </div>
        </div>
    </div>

    <div id="doubtModal">
        <div class="modal-content">
            <div class="modal-body" id="modalBody"></div>
            <div class="answer-input-area">
                <textarea id="newAnswerText" placeholder="Add your answer..." style="height: 60px;"></textarea>
                <button class="post-btn" id="addAnswerBtn" style="border-color: var(--neon-blue); color: var(--neon-blue);">[ SUBMIT ANSWER ]</button>
                <button class="post-btn" onclick="closeModal()" style="border-color: var(--neon-red); color: var(--neon-red); width: auto; padding: 12px 20px; float: right;">[ CLOSE ]</button>
            </div>
        </div>
    </div>

    <audio id="saberSound" src="sounds/sabre.mp3"></audio>
    <audio id="laserSound" src="sounds/lazer.mp3"></audio>

    <script>
        // 1. DYNAMIC IDENTITY
        // Pulls the real ID (e.g., 245209) stored during login
        let currentUserId = sessionStorage.getItem('activeUser') || "GUEST_USER";
        let doubts = JSON.parse(localStorage.getItem('community_doubts') || '[]');
        let activeDoubtId = null;

        // 2. CREATE POST
        function postDoubt() {
            const text = document.getElementById('newDoubtText').value;
            if(!text) return;

            const newDoubt = {
                id: Date.now(),
                author: currentUserId,
                text: text,
                timestamp: new Date().toLocaleString(),
                answers: []
            };

            doubts.unshift(newDoubt);
            localStorage.setItem('community_doubts', JSON.stringify(doubts));
            document.getElementById('newDoubtText').value = '';
            renderFeed();
            playSound('laser');
        }

        // 3. RENDER FEED WITH DELETE PERMISSION
        function renderFeed() {
            const feed = document.getElementById('doubtFeed');
            if (doubts.length === 0) {
                feed.innerHTML = `<div style="text-align:center; color:#444; margin-top:50px;">NO DISCUSSIONS FOUND</div>`;
                return;
            }

            feed.innerHTML = doubts.map(d => {
                const isOwner = (d.author === currentUserId);
                return `
                    <div class="doubt-card" onclick="openDoubt(${d.id})">
                        <div class="doubt-author">${d.author} ${isOwner ? '(YOU)' : ''}</div>
                        <div class="doubt-text">${d.text}</div>
                        <div class="doubt-meta">
                            <span>${d.timestamp}</span>
                            <div style="display: flex; align-items: center; gap: 15px;">
                                <span style="color: var(--neon-green)">${d.answers.length} REPLIES</span>
                                ${isOwner ? `<button class="delete-btn" onclick="deleteDoubt(event, ${d.id})">[ TERMINATE ]</button>` : ''}
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        // 4. DELETE LOGIC
        function deleteDoubt(event, id) {
            event.stopPropagation(); // Prevents modal from opening
            if(confirm("SYSTEM WARNING: PERMANENTLY TERMINATE THIS DISCUSSION?")) {
                doubts = doubts.filter(d => d.id !== id);
                localStorage.setItem('community_doubts', JSON.stringify(doubts));
                renderFeed();
            }
        }

        // 5. MODAL & HELPFUL LOGIC
        function openDoubt(id) {
            activeDoubtId = id;
            const doubt = doubts.find(d => d.id === id);
            const modal = document.getElementById('doubtModal');
            const body = document.getElementById('modalBody');

            body.innerHTML = `
                <div class="doubt-author" style="font-size: 0.8rem">${doubt.author}</div>
                <h2 style="color: white; border-bottom: 1px solid #333; padding-bottom: 15px;">${doubt.text}</h2>
                <div id="answersContainer">
                    ${doubt.answers.map((a, idx) => {
                        // Check if user has already voted
                        const hasVoted = a.voters && a.voters.includes(currentUserId);
                        return `
                        <div class="answer-card">
                            <div class="doubt-text">${a.text}</div>
                            <button class="helpful-btn ${hasVoted ? 'voted' : ''}" 
                                    onclick="${hasVoted ? '' : `toggleHelpful(${idx})`}"
                                    ${hasVoted ? 'disabled' : ''}>
                                ${hasVoted ? 'VOTE RECORDED' : 'HELPFUL?'} [ <span id="count-${idx}">${a.helpful || 0}</span> ]
                            </button>
                        </div>
                    `}).join('')}
                </div>
            `;

            document.getElementById('addAnswerBtn').onclick = () => postAnswer(id);
            modal.style.display = 'flex';
            playSound('saber');
        }

        function postAnswer(doubtId) {
            const text = document.getElementById('newAnswerText').value;
            if(!text) return;

            const doubt = doubts.find(d => d.id === doubtId);
            // Initialize with empty voters array for tracking
            doubt.answers.push({ text: text, helpful: 0, voters: [] });
            
            localStorage.setItem('community_doubts', JSON.stringify(doubts));
            document.getElementById('newAnswerText').value = '';
            openDoubt(doubtId); 
            renderFeed(); 
        }

        function toggleHelpful(answerIdx) {
            const doubt = doubts.find(d => d.id === activeDoubtId);
            const answer = doubt.answers[answerIdx];

            if (!answer.voters) answer.voters = [];
            if (answer.voters.includes(currentUserId)) return;

            answer.voters.push(currentUserId);
            answer.helpful = (answer.helpful || 0) + 1;
            
            localStorage.setItem('community_doubts', JSON.stringify(doubts));
            openDoubt(activeDoubtId); // Refresh modal to show updated vote
            playSound('laser');
        }

        function closeModal() {
            document.getElementById('doubtModal').style.display = 'none';
        }

        function playSound(type) {
            const s = document.getElementById(type === 'saber' ? 'saberSound' : 'laserSound');
            if(s) { s.currentTime = 0; s.play().catch(e=>{}); }
        }

        renderFeed();
    </script>
</body>
</html>


