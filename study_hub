    <script>
        // Load notes when the terminal starts
        document.addEventListener('DOMContentLoaded', displayRecords);

        function uploadResource() {
            const name = document.getElementById('topicName').value;
            const url = document.getElementById('driveUrl').value;
            const code = document.getElementById('subjectCode').value;

            // MENTOR NOTE: In a real app, this pulls from your Login state.
            // Since we are simulating, we'll use a placeholder.
            const currentUser = "PROF_SHARMA_ADMIN"; 

            if (!name || !url) {
                alert("SYSTEM_ERROR: NULL_VALUES_DETECTED");
                return;
            }

            const record = {
                id: Date.now(),
                topic: name,
                link: url,
                subject: code || "GEN_ED",
                author: currentUser,
                timestamp: new Date().toLocaleDateString()
            };

            const database = JSON.parse(localStorage.getItem('libData')) || [];
            database.push(record);
            localStorage.setItem('libData', JSON.stringify(database));

            displayRecords();
            
            // Clear inputs for next entry
            document.getElementById('topicName').value = '';
            document.getElementById('driveUrl').value = '';
            document.getElementById('subjectCode').value = '';
        }

        function displayRecords() {
            const container = document.getElementById('fileContainer');
            const database = JSON.parse(localStorage.getItem('libData')) || [];
            
            container.innerHTML = '';

            if(database.length === 0) {
                container.innerHTML = '<p style="opacity:0.5">NO_RECORDS_FOUND_IN_SECTOR_7</p>';
                return;
            }

            database.forEach(file => {
                container.innerHTML += `
                    <div class="resource-card">
                        <button class="delete-btn" onclick="deleteRecord(${file.id})">[DELETE]</button>
                        <span class="tag">${file.subject}</span>
                        <span class="tag">${file.timestamp}</span>
                        <h3>${file.topic}</h3>
                        <span class="uploader-tag">SOURCE_USER: ${file.author}</span>
                        <a href="${file.link}" target="_blank" class="drive-link-btn">ACCESS_DRIVE_FOLDER</a>
                    </div>
                `;
            });
        }

        function deleteRecord(id) {
            let database = JSON.parse(localStorage.getItem('libData')) || [];
            database = database.filter(f => f.id !== id);
            localStorage.setItem('libData', JSON.stringify(database));
            displayRecords();
        }
    </script>
</body>
