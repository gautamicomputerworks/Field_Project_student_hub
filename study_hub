    </div>

    <div class="auth-card" id="authBox">
        <div class="box-laser"></div>
        <div class="card-header" id="card-type">AUTHENTICATION_REQUIRED</div>
        
        <div id="console-out">> SYSTEM_READY</div>

        <div class="input-group">
            <label>USER_ID</label>
            <input type="text" id="uid" autocomplete="off">
        </div>

        <div class="input-group">
            <label>PASSWORD</label>
            <input type="password" id="pwd">
            <span class="eye-toggle" id="eyeIcon" onclick="togglePass()">◉</span>
        </div>

        <button class="btn" id="main-btn" onclick="handleAuth()">[ LOGIN ]</button>
        <div class="toggle-link" id="toggle-text" onclick="toggleMode()">NO_ACCOUNT? REGISTER_HERE</div>
    </div>

    <audio id="saberSound" src="sounds/sabre.mp3" preload="auto"></audio>
    <audio id="laserSound" src="sounds/lazer.mp3" preload="auto"></audio>
    <audio id="errorSound" src="sounds/error.mp3" preload="auto"></audio>

    <script>
        let isLoginMode = true;
        const saberSnd = document.getElementById('saberSound');
        const laserSnd = document.getElementById('laserSound');
        const errorSnd = document.getElementById('errorSound');

        function togglePass() {
            const pwdInput = document.getElementById('pwd');
            const eye = document.getElementById('eyeIcon');
            if (pwdInput.type === "password") {
                pwdInput.type = "text";
                eye.innerText = "◯"; 
            } else {
                pwdInput.type = "password";
                eye.innerText = "◉"; 
            }
        }

        function toggleMode() {
            isLoginMode = !isLoginMode;
            const cardType = document.getElementById('card-type');
            const mainBtn = document.getElementById('main-btn');
            const toggleText = document.getElementById('toggle-text');
            const consoleOut = document.getElementById('console-out');

            if (isLoginMode) {
                cardType.innerText = "AUTHENTICATION_REQUIRED";
                mainBtn.innerText = "[ LOGIN ]";
                toggleText.innerText = "NO_ACCOUNT? REGISTER_HERE";
                consoleOut.innerText = "> LOGIN_MODE_ACTIVE";
            } else {
                cardType.innerText = "CREATE_NEW_ACCESS";
                mainBtn.innerText = "[ REGISTER ]";
                toggleText.innerText = "ALREADY_REGISTERED? LOGIN_HERE";
                consoleOut.innerText = "> REGISTRATION_MODE_ACTIVE";
            }
        }

        function handleAuth() {
            const box = document.getElementById('authBox');
            const con = document.getElementById('console-out');
            const uid = document.getElementById('uid').value;
            const pwd = document.getElementById('pwd').value;
            let db = JSON.parse(localStorage.getItem('user_db') || '{}');

            if (!uid || !pwd) {
                con.innerText = "> ERROR: FIELDS_EMPTY";
                con.style.color = "var(--neon-red)";
                triggerError(box);
                return;
            }

            if (isLoginMode) {
                if (!db[uid]) {
                    con.innerText = "> USER_NOT_FOUND: PLEASE_REGISTER";
                    con.style.color = "var(--neon-red)";
                    triggerError(box);
                } else if (db[uid] === btoa(pwd)) {
                    con.innerText = "> ACCESS_GRANTED";
                    con.style.color = "var(--neon-blue)";
                    
                    // SESSION STORAGE FOR STUDENT_01 IDENTITY
                    sessionStorage.setItem('activeUser', uid);

                    if(saberSnd) saberSnd.play().catch(e=>{});
                    if(laserSnd) laserSnd.play().catch(e=>{});

                    document.getElementById('slash').classList.add('slash-active');
                    setTimeout(() => { window.location.href = "homepage.html"; }, 800);
                } else {
                    con.innerText = "> INCORRECT_PASSWORD";
                    con.style.color = "var(--neon-red)";
                    triggerError(box);
                }
            } else {
                if (db[uid]) {
                    con.innerText = "> ERROR: USER_ID_TAKEN";
                    con.style.color = "var(--neon-red)";
                    triggerError(box);
                } else {
                    db[uid] = btoa(pwd);
                    localStorage.setItem('user_db', JSON.stringify(db));
                    con.innerText = "> REGISTRATION_SUCCESSFUL";
                    con.style.color = "var(--neon-green)";
                    if(laserSnd) laserSnd.play().catch(e=>{}); 
                    setTimeout(toggleMode, 1000);
                }
            }
        }

        function triggerError(el) {
            if(errorSnd) { errorSnd.currentTime = 0; errorSnd.play().catch(e=>{}); }
            el.classList.add('error-shake');
            setTimeout(() => el.classList.remove('error-shake'), 400);
        }
    </script>
</body>
</html>


